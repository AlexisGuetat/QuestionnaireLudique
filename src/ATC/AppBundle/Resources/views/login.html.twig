{# MODAL DE LOGIN #}
<div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">Connection</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
        <div class="modal-body mx-3">
          <div class="md-form mb-5">
            <i class="fas fa-user prefix grey-text"></i>
            <input type="email" name="email" id="email" class="form-control validate">
            <label data-error="wrong" data-success="right" for="form3">Entrez votre email</label>
          </div>

          <div class="md-form mb-4">
            <i class="fas fa-envelope prefix grey-text"></i>
            <input type="password" name="mdp" id="mdp" class="form-control validate">
            <label data-error="wrong" data-success="right" for="form2">Entrez votre mot de passe</label>
          </div>

          </div>
          <div class="modal-footer d-flex justify-content-center">
            <button id="login" type="submit" class="btn btn-indigo">Se connecter</button>
          </div>
        </form>
    </div>
  </div>
</div>

<script>
$("#login").click(function (e) { 
    e.preventDefault();

    var mdp = $("#mdp").val();
    var email = $("#email").val() ;

    $.ajax({
        type: "post",
        url: "{{ path('login') }}",
        data: "email=" + email + "&mdp=" + mdp,
        dataType: "html",
        success: function (response) {
            alert(response);
        },
        error: function (err,response) {
            console.log(err);
            console.log(response);
        }
    });
});
</script>