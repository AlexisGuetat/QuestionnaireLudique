{% extends "ATCAppBundle::index.html.twig" %}

{% block fond_anime %}
    <img src="{{  asset('images/fonds/fond2.gif') }}" class="fond">
{% endblock %}

{% block body %}

<div class="bd-example">
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
      {% for theme in themes %}
      <li data-target="#carousel"."{{ theme.nom }}" data-slide-to="{{ theme.id }}" ></li>
      
      {% endfor %}
    </ol>

    
    <div class="carousel-inner">

      <div class="carousel-item active">
        <img src="{{  asset('images/images_theme/theme0.jpg') }}" class="d-block w-100">
        <div class="carousel-caption d-none d-md-block">
          <h5>Selectionner le theme que vous souhaiter</h5>
          <p>Cliquer sur les fleches a droite ou a gauche pour selectionner les themes</p>
        </div>
      </div>

    {% for theme in themes %}
      <div class="carousel-item">
        {#<img src="{{ asset('images/images_theme/{{ theme.nom }}.png') }}" class="d-block w-100" alt=" image">#}
        <img src="{{  asset('images/images_theme/theme' ~  theme.id  ~  '.png') }}" class="d-block w-100" >
        <div class="carousel-caption d-none d-md-block">
          <a class="btn btn-primary" href="{{ path('questionnaire', {'difficulte' : app.request.get('difficulte') , 'theme' : theme.nom|upper   , 'id' : '40', 'numero_question' : '0', 'score' : '0' } ) }}" >CHOISIS LE THEME DE {{theme.nom|upper}} </a>
        </div>
      </div>
    {% endfor %}
 </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Pr√©cedent</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Suivant</span>
    </a>
  </div>
</div>

{% endblock %}