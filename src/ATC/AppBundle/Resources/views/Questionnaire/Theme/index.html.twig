{% extends "ATCAppBundle::index.html.twig" %}

{% block fond_anime %}
    <img src="{{  asset('images/fonds/fond2.gif') }}" class="fond">
{% endblock %}

{% block body %}

<div class="bd-example">
  <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
      {% for theme in themes %}
      <li data-target="#carousel"."{{ theme.nom }}" data-slide-to="{{ theme.id }}" ></li>
      
      {% endfor %}
    </ol>

    
    <div class="carousel-inner">

      <div class="carousel-item active">
        <img src="{{  asset('images/images_theme/theme0.png') }}" class="d-block w-100">
        <div class="carousel-caption d-none d-md-block btn btn-primary">
          <h5>Bonjour je suis Fox ! </br>Choisi le theme avec lequel tu veux jouer </br> en cliquant sur les fleches à droite ou a gauche.</h5>
        </div>
      </div>

    {% for theme in themes %}
      <div class="carousel-item">
        {#<img src="{{ asset('images/images_theme/{{ theme.nom }}.png') }}" class="d-block w-100" alt=" image">#}
        <img src="{{  asset('images/images_theme/theme' ~  theme.id  ~  '.png') }}" class="d-block w-100" >
        <div class="carousel-caption d-none d-md-block">
          <a class="btn btn-primary" href="{{ path('questionnaire', {'difficulte' : difficulte.nom , 'theme' : theme.nom  , 'numero_question' : '0', 'score' : '0' } ) }}" >CHOISIS LE THEME DE {{theme.nom|upper}} </a>
        </div>
      </div>
    {% endfor %}
 </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
      <span class="fas fa-chevron-left" aria-hidden="true" style="font-size: 3em; color: Tomato;"></span>
      <span class="sr-only">Précedent</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
      <span class="fas fa-chevron-right" aria-hidden="true" style="font-size: 3em; color: Tomato;"></span>
      <span class="sr-only">Suivant</span>
    </a>
  </div>
</div>

{% endblock %}
