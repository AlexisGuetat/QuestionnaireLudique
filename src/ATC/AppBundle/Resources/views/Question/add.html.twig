{% extends "ATCAppBundle:Administrateur:index.html.twig" %}

{% block body %}
<div class="container mt-4 pt-5 pb-5 ">
		

                <h5 class="card-header"><b>Ajouter une question au questionnaire : {{ app.request.query.get('titre') }}</b></h5>

					<form id="addQuestion" action="{{ path('question_ajout') }}">
                        <div class="container ">

                            <div class="form-group " >
            
                                <label for="intitule" class="text-center btn aqua-gradient"><b>Intitulé de la question:</b>
                                <input autofocus type="text" name="intitule" class="form-control mb-1" size="60" required=""  /> </label>
                      
                            </div>
       
            
                            <div class="form-group">

                             <label for="reponseUnJuste" class="text-center btn btn-success"><b>Réponse de la question (celle-ci sera juste): </b>
                                <input type="text" name="reponseUnJuste" class="form-control"  /></label>
            
                                <label for="reponseDeuxFausse" class="text-center btn btn-danger"><b>Choix 1 à la question (celle-ci sera fausse):</b>
                                <input type="text" name="reponseDeuxFausse" class="form-control"  /></label>
                                
                                <label for="reponseTroisFausse" class="text-center btn btn-danger"><b>Choix 2 à la question (celle-ci sera fausse):</b>
                                <input type="text" name="reponseTroisFausse" class="form-control" /></label>

                                <label for="reponseQuatreFausse" class="text-center btn btn-danger"><b>Choix 3 à la question (celle-ci sera fausse):</b>
                                <input type="text" name="reponseQuatreFausse" class="form-control"  /></label>
                               <div>
                                <button type="submit" class="btn btn-primary">Envoyer</button>
                               </div>
                            </div>
                        </div>  
					</form>

		
		</div>

{% endblock %}