
{% extends "ATCAppBundle::index.html.twig" %}

{% block body %}
<div class= "responsive bg-transparent">
    
    

     <!-- Mask & flexbox options-->
    
    
      <!-- Content -->
      <div class="responsive text-center white-text ">

        <!-- Section heading -->
        <h1 class="display-4 mt-5 mb-6">Questionnaire avec l'id </h1>
        <h2 class="mb-5"><b> Combien font 1 + 1 ? </b></h2>
     
        <!-- Grid row -->
       
        <div id="coucou" class="row justify-content-center ">
        <div class="col-sm">
        
            <div id="btn1" class="btn btn-lg  btn-primary col-xs-12 col-md-8"><b>1</b></div>
            <div id="btn2" class="btn btn-lg  btn-danger  col-xs-12 col-md-8"><b>2</b></div>
        
        </div>
        <div class="col-sm">
        
            <div id="btn3" class="btn btn-lg  btn-warning col-xs-12 col-md-8"><b>3</b></div>
            <div id="btn4"class="btn btn-lg  btn-success col-xs-12 col-md-8"><b>4</b></div>
        
        </div>
       </div>
       <script type='text/javascript'>

        function orderElems()
        {
         var elems = [], tempElem, pn, args = orderElems.arguments;
         
         for( var i = 0, len = args.length; i < len; i++ )
          ( pn = ( elems[ i ] = tempElem = document.getElementById( args[ i ] ) ).parentNode).removeChild( tempElem );
          
         for( var i = len - 1, idx, tmp; i > -1; i-- )
         { 
          while( ( idx = Math.floor( Math.random() * len ) ) == i )
          ;
          tmp = elems[ i ];
          elems[ i ] = elems[ idx ];
          elems[ idx ] = tmp;
         } 
         
         for( var i = 0; i < len; i++ )
          pn.appendChild( elems[ i ] );
        }
        
        orderElems( 'btn1', 'btn2', 'btn3', 'btn4' );
        
        </script>
        <!-- Grid row -->

      </div>
    
</div>

<script src="{{  asset('js/random.js') }}"></script>
{% endblock %}